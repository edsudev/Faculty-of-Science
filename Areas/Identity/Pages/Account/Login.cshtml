@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="grid grid-cols-1 mt-48 mb-8">
    <div class="col-span-1 mx-auto">
        <section>
            <form id="account" method="post">
                <h3>Login</h3>
                <h5 class="text-red-500">Note: Only Faculty of Science's Admin can login!</h5>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <label asp-for="Input.Email" ></label><br />
                    <input asp-for="Input.Email" class="border rounded-md w-full h-12 p-2" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <label asp-for="Input.Password" ></label><br />
                    <input asp-for="Input.Password" class="border rounded-md w-full h-12 p-2" autocomplete="current-password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 mt-1 px-4 rounded w-full">Log in</button>
                </div>
                <div>
                    <h5>Having issues signing in? Contact the ICT UNIT for support! ⚠️</h5>
                   
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                     @*<p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>*@
                </div>
            </form>
        </section>
    </div>
